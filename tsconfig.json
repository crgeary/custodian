{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": ["es2020"],
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules"]
}
