{
    "name": "@crgeary/custodian",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "format": "prettier --ignore-path .gitignore --write .",
        "check-format": "prettier --list-different --ignore-path .gitignore .",
        "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@crgeary/configuration-prettier": "1.0.3",
        "@types/aws-lambda": "8.10.76",
        "@types/jest": "26.0.23",
        "@types/node": "15.3.1",
        "@typescript-eslint/eslint-plugin": "4.22.0",
        "@typescript-eslint/parser": "4.22.0",
        "eslint": "7.25.0",
        "eslint-config-prettier": "8.3.0",
        "husky": "6.0.0",
        "jest": "26.6.3",
        "lint-staged": "10.5.4",
        "prettier": "2.2.1",
        "ts-jest": "26.5.5",
        "tslib": "2.2.0",
        "typescript": "4.2.4"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/crgeary/custodian.git"
    },
    "author": "Christopher Geary <hello@crgeary.com>",
    "license": "MIT",
    "prettier": "@crgeary/configuration-prettier",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "lint-staged": {
        "**/*.+(js|jsx|ts|tsx)": [
            "eslint"
        ],
        "**/*.+(js|jsx|ts|tsx|json)": [
            "prettier --write",
            "git add"
        ]
    }
}
